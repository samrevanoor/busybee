<%- include('../partials/header') %>
    <form action="/jobs" method="POST">
        <label>Role name
            <input type="string" name="role">
        </label><br>
        <label>Company
            <input type="string" name="company">
        </label><br>
        <label># of stages
            <select name="totalStages">
                <% for (let i=1; i < 21 + 1; i++){ %>
                    <option value="<%=i%>">
                        <%= i %>
                    </option>
                    <% } %>
            </select>
        </label><br>
        <label>Current Stage
            <select name="currentStage">
                <% for (let i=1; i < 21 + 1; i++){ %>
                    <option value="<%=i%>">
                        <%= i %>
                    </option>
                    <% } %>
            </select>
        </label><br>
        <label>Link to job description
            <input type="string" name="link">
        </label><br>
        <label>Notes
            <input type="string" name="notes">
        </label><br><br>
        <input type="submit" value="Add job">
        <a href="/jobs">cancel</a>
    </form>


    <%- include('../partials/footer') %>