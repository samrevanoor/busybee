<%- include('../partials/header') %>

<div id="job-list">
    <div id="add-job">
        <a href="/jobs/new">add a job</a>
    </div><br><br>
    <% if (user.jobs.length >= 1) { %>
            <% user.jobs.forEach(function(j) { %>
                <li>
                    <%= j.role %>
                        at
                        <%= j.company %>
                        <a href="/jobs/<%= j._id %>">details</a>
                            <% });%>
            </li>
            <% } else { %>
                <h3>no jobs yet!</h3>
                <% } %>
    </div>
    <%- include('../partials/footer') %>