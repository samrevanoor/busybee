<%- include('../partials/header') %>

    <div id="job-list">
        <h2 id="title">
            <%= title %>
            <span class="add-job">
                <form action="/jobs/new" method="GET">
                    <button id="add-job" type="submit">add a job</button>
                </form>
            </span>
        </h2>
        <br><br>
        <% if (user.jobs.length>= 1) { %>
            <ul>
            <% user.jobs.forEach(function(j) { %>
                <li>
                    <%= j.role %>
                        at
                        <%= j.company %>
                            <span id="current-stage">
                                <%=j.currentStage%>
                            </span>
                            <a href="/jobs/<%= j._id %>">details</a>
                            <% });%>
                </li>
            </ul>
                <% } else { %>
                    <h3>no jobs yet!</h3>
                    <% } %>
    </div>
    <%- include('../partials/footer') %>