<%- include('../partials/header') %>
    <div>
        <a href="/jobs/new">Add a job</a>
    </div>

    <div id="jobList">
        <% if (jobs.length >= 1) { %>
            <% jobs.forEach(function(j) { %>
                <li>
                    <%= j.role %>
                        at
                        <%= j.company %>
                        <a href="/jobs/<%= j._id %>">details</a>
                            <% });%>
            </li>
            <% } else { %>
                <h3>no jobs yet!</h3>
                <% } %>
    </div>
    <%- include('../partials/footer') %>